@model BookModel


    <div class="card mb-4 shadow-sm">
        <img src="@Model.CoverImgPath" class="img-thumbnail" style="height:250px" />
        <div class="card-body">
            <h3 class="card-title">@Model.Title</h3>
            <p class="card-text">@Model.Description</p>
            <div class="btn-group">
                <a asp-controller="book" asp-action="getbook" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
            </div>
            <small class="text-muted">@Model.Author</small>
        </div>
    </div>
